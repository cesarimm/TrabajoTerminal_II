<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/color2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewInflado"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_above="@+id/lvFecha"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-64dp"
        android:layout_marginLeft="0dp"
        />

    <TextView
        android:id="@+id/lvTitulo"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="98dp"
        android:text="Hola!!!"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lvFecha"
        android:layout_width="257dp"
        android:layout_height="123dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="AQUÍ VA EL CONTENIDO DEL MENSAJE" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/lvFecha"
        android:layout_toLeftOf="@+id/lvFecha"
        android:background="@drawable/basura"
        android:layout_marginRight="15dp"
        android:textSize="8dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/btnCompartir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/lvFecha"
        android:layout_toLeftOf="@+id/btnEliminar"
        android:background="@drawable/share"
        android:textSize="8dp" />

    <Button
        android:id="@+id/btnVisualizar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/lvFecha"
        android:layout_toLeftOf="@+id/btnCompartir"
        android:background="@drawable/obj"
        android:textSize="8dp" />


</RelativeLayout>